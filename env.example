# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/adaptive_learning
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
DEBUG=true
APP_NAME=Adaptive Learning Assessment System
APP_VERSION=1.0.0

# ML Models
MODEL_STORAGE_PATH=data/models
TRAINING_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed

# Assessment Settings
MAX_QUESTIONS_PER_ASSESSMENT=50
MIN_QUESTIONS_PER_ASSESSMENT=10
ASSESSMENT_TIME_LIMIT_MINUTES=60

# IRT Model Settings
IRT_DIFFICULTY_RANGE_MIN=-3.0
IRT_DIFFICULTY_RANGE_MAX=3.0
IRT_DISCRIMINATION_RANGE_MIN=0.1
IRT_DISCRIMINATION_RANGE_MAX=2.0
IRT_GUESSING_RANGE_MIN=0.0
IRT_GUESSING_RANGE_MAX=0.3

# BKT Model Settings
BKT_INITIAL_KNOWLEDGE=0.1
BKT_LEARN_RATE=0.3
BKT_GUESS_RATE=0.1
BKT_SLIP_RATE=0.1

# XGBoost Settings
XGB_N_ESTIMATORS=100
XGB_MAX_DEPTH=6
XGB_LEARNING_RATE=0.1

# API Settings
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
